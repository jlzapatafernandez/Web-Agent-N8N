# ==============================================
# WEB AGENT N8N - Environment Variables
# ==============================================

# n8n Configuration
N8N_HOST=http://localhost:5678
N8N_WEBHOOK_URL=https://your-n8n-domain.com/webhook/AGENTE_WEB_GITHUB
N8N_API_KEY=your-n8n-api-key-here

# Redis Configuration (for session management & memory)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here
REDIS_DB=0

# OpenAI Configuration (for AI responses)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4.1
OPENAI_MODEL_MINI=gpt-4.1-mini
OPENAI_TEMPERATURE=0.1
OPENAI_TOP_P=0.9

# Google AI Configuration (Gemini - Primary model)
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
GOOGLE_AI_MODEL=gemini-pro
GOOGLE_AI_TEMPERATURE=0.1
GOOGLE_AI_TOP_P=0.9

# MCP Services Configuration (Optional)
# Calendar Service
MCP_CALENDAR_ENDPOINT=https://your-mcp-server.com/calendar
MCP_CALENDAR_TOKEN=your-calendar-token-here

# Email Service
MCP_EMAIL_ENDPOINT=https://your-mcp-server.com/email
MCP_EMAIL_TOKEN=your-email-token-here

# Google Sheets Configuration (Optional - for lead capture)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_SHEETS_DOCUMENT_ID=your-google-sheet-id-here
GOOGLE_SHEETS_NAME=Leads

# Business Configuration
BUSINESS_NAME=Your Business Name
BUSINESS_LOCATION=Sevilla, España
BUSINESS_TIMEZONE=Europe/Madrid
BUSINESS_EMAIL=contact@yourbusiness.com
BUSINESS_PHONE=+34 XXX XXX XXX

# Business Hours
BUSINESS_HOURS_START=10:00
BUSINESS_HOURS_END=14:00
BUSINESS_HOURS_AFTERNOON_START=15:00
BUSINESS_HOURS_AFTERNOON_END=19:00
BUSINESS_DAYS=1,2,3,4,5  # 1=Monday, 5=Friday

# Appointment Configuration
APPOINTMENT_DURATION_MINUTES=60
MIN_ADVANCE_BOOKING_HOURS=24
MAX_ADVANCE_BOOKING_DAYS=30

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
MAX_MESSAGES_PER_SESSION=50

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=10
RATE_LIMIT_REQUESTS_PER_HOUR=100

# Vector Database Configuration (Qdrant - Optional)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION_NAME=web_agent_knowledge
QDRANT_VECTOR_SIZE=1536

# Webhook Configuration
WEBHOOK_TIMEOUT_SECONDS=30
WEBHOOK_RETRY_ATTEMPTS=3

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/web-agent.log

# Web Widget Configuration
WIDGET_PRIMARY_COLOR=#007bff
WIDGET_SECONDARY_COLOR=#6c757d
WIDGET_POSITION=bottom-right
WIDGET_GREETING_MESSAGE=¡Hola! ¿En qué puedo ayudarte?
WIDGET_PLACEHOLDER_TEXT=Escribe tu mensaje...
WIDGET_TITLE=Asistente Virtual

# Security Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_IPS=*
MAX_REQUEST_SIZE_MB=10

# Performance Configuration
CACHE_TTL_SECONDS=3600
MAX_CONCURRENT_SESSIONS=100
MESSAGE_QUEUE_SIZE=1000

# Monitoring & Analytics (Optional)
ANALYTICS_ENABLED=false
ANALYTICS_PROVIDER=google_analytics
ANALYTICS_ID=your-analytics-id-here

# Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=production

# Database Configuration (if using persistent storage)
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=web_agent
DATABASE_USER=web_agent_user
DATABASE_PASSWORD=your-database-password-here

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Feature Flags
FEATURE_LEAD_CAPTURE=true
FEATURE_APPOINTMENT_BOOKING=true
FEATURE_FILE_UPLOAD=false
FEATURE_VOICE_INPUT=false
FEATURE_MULTILANGUAGE=true

# Supported Languages
SUPPORTED_LANGUAGES=es,en
DEFAULT_LANGUAGE=es

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
EMAIL_FROM=noreply@yourdomain.com
EMAIL_ADMIN=admin@yourdomain.com
